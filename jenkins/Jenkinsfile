pipeline {
    agent any

    environment {
        IMAGE_NAME = "todo_app"
        IMAGE_TAG = "${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup Wrapper') {
            steps {
                dir('app') {
                    // Ensure wrapper is executable
                    sh 'chmod +x gradlew'
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir('app') {
                    sh './gradlew test'
                }
            }
        }

        stage('Build Artifact') {
            steps {
                dir('app') {
                    sh './gradlew clean bootJar -x test'
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} -f docker/Dockerfile ."
                    sh "docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${IMAGE_NAME}:latest"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
